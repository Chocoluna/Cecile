{% extends 'partials/base.html.twig' %}

{% set options = { items: {'@page.children': '/portraits'}, 'order': {'by': 'date', 'dir': 'desc'}} %}
{% set featured = page.collection(options) %}

{% block content %}
<div class="home_posts_titles">
  <div class="row">
    <div class="large-12 columns raleway-regular">
      {{ page.content|raw }}
    </div>
  </div>
</div>
{% if featured %}
<div class="featured-posts">
    <div class="row">
    {% for child in featured[:3] %}
      <div class="large-4 columns">
        {% include 'partials/blog_item.html.twig' with {'page':child, 'truncate':true, 'readmore': true} %}
      </div>
    {% endfor %}
    </div>
</div>
{% endif %}
{% endblock %}
